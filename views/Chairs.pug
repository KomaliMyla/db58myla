extends layout

block content
  h1= title
  - let images = results
  - let items = results
  div(class="container-fluid")
   div(class="row m-1")
    each item in items
     - let destination = `dispatch(\"/Chairs/update?id=${item._id}\")`
      div(class="row-sm-2", class="m-1") Item #{item.Chairs_type}(#{item.Color}) is #{item.Cost}
      button.btn( class="btn-info ml-1", onclick= destination) Update
     script.
         function dispatch(path){
         window.location.href=path
         }
    table(class="table table-bordered")
        thead
            tr 
                th(scope="col") Chair_type 
                th(scope="col") Color 
                th(scope="col") Cost
        tbody        
            - for(let i=0;i<images.length;i++){
                tr
                    td  #{images[i].Chair_type}
                    td  #{images[i].Color}
                    td  #{images[i].Cost}
            - }